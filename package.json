{
	"name": "meshwork",
	"version": "0.0.31",
	"author": "jmquigley <jmquigley@outlook.com>",
	"description": "Multi-module package.json manager",
	"private": false,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmquigley/meshwork"
	},
	"bugs": {
		"url": "https://github.com/jmquigley/meshwork/issues"
	},
	"engines": {
		"node": ">=7.x"
	},
	"dependencies": {
		"fs-extra": "^7.0.1",
		"util.chdir": "0.0.41",
		"util.merge-packages": "0.0.17",
		"yargs": "^13.2.2"
	},
	"bin": {
		"meshwork": "./cli.js"
	},
	"main": "./index.umd.min.js",
	"module": "./index.es.min.js",
	"types": "./index.d.ts",
	"files": [
		"cli.js",
		"index.js",
		"index.*.min.js",
		"index.d.ts"
	],
	"devDependencies": {
		"@babel/cli": "^7.2.3",
		"@babel/core": "^7.3.4",
		"@babel/plugin-transform-modules-umd": "^7.2.0",
		"@babel/preset-env": "^7.3.4",
		"@babel/preset-typescript": "^7.3.3",
		"@babel/runtime": "^7.3.4",
		"@types/fs-extra": "5.0.5",
		"@types/jest": "^24.0.11",
		"@types/node": "^11.11.3",
		"@types/yargs": "^12.0.9",
		"babel-jest": "^24.5.0",
		"babel-minify": "^0.5.0",
		"babel-preset-minify": "^0.5.0",
		"coveralls": "^3.0.3",
		"jest": "^24.5.0",
		"prettier": "^1.16.4",
		"tslint": "^5.14.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.3.3333",
		"util.fixture": "0.0.72",
		"util.pkgwrap": "^0.0.105"
	},
	"pkgwrap": {
		"cleanup": [
			"cli.js",
			"cli.js.map",
			"cli.d.ts"
		]
	},
	"scripts": {
		"all": "yarn install && yarn build && yarn test && yarn manifest",
		"build": "yarn clean && yarn lint && yarn prettier && yarn build:es && yarn build:umd && yarn build:cli",
		"build:es": "tsc -p . && minify index.js --out-file index.es.min.js",
		"build:umd": "babel index.js --out-file index.umd.min.js",
		"build:cli": "babel cli.js --out-file cli.js",
		"clean": "pkgwrap --clean",
		"clean:dist": "yarn clean && rimraf node_modules/ yarn.lock",
		"coverage": "pkgwrap --coverage --jest",
		"lint": "pkgwrap --lint",
		"manifest": "npm pack --dry-run",
		"prettier": "prettier --write \"**/*.{ts,tsx,js,json,yaml,yml,css}\"",
		"test": "jest"
	}
}
